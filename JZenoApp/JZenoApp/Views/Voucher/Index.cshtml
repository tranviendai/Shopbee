@model IEnumerable<JZenoApp.Models.Voucher>
@{
    Layout = "~/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
<link href="~/css/voucher.css" rel="stylesheet" />

<div class="row" style="margin:20px 10px ;">
    <div class="col-6">
        <h4 style="">Kho voucher</h3>
    </div>
    <div class="col-6" style="display: flex; justify-content: right;">

        <a href="#" class="tvc">Tìm kiếm voucher</a>
        <span class="chia">|</span>
        <a href="#" class="tvc">Xem lịch sử voucher</a>
        <span class="chia">|</span>
        <a href="#" class="tvc timhieu">Tìm hiểu</a>
    </div>
</div>

<div class="bgkhung Ksearchvoucher">
    <span class="lablenamevc">Mã voucher</span>
    <input class="inputsearch" maxlength="255" type="text" placeholder="Nhập mã voucher tại đây">
    <button class="btnsearch"> Lưu</button>
</div>

<div style="font-size: 20px; margin: 27px; font-weight: 500;">Voucher của Shope</div>

<div class="bgkhung kloc">
    <a class="tvc loc" href="#" style="margin-left: 40px; ">Mới nhất</a>
    <a class="tvc loc" href="#">Phổ biến</a>
    <a class="tvc loc" href="#">Sắp hết hạn</a>
</div>
<div>
    <div class="row" style="margin:20px 20px;">
      @foreach(var item in Model)
      {
        <div class="col-6" style="padding: 20px;">
            <div class="row dsvoucher">
                <div class="col-3" style="margin: -12.6px 0px; margin-left: -39px;">
                    <img src="~/images/voucher/voucher%.png" width="260px">
                </div>

                <div class="col-9" style="padding:30px 25px;">
                    <div class="row">
                        <div class="col-6">
                            @item.name
                        </div>
                        <div class="col-6" style="display: flex; justify-content: right;">
                            <a href="#" style=" color: red; text-decoration: none; margin-right: -30px;">Dùng sau ></a>
                        </div>
                    </div>
                    <div>
                            @if (Convert.ToDouble(item.price) == 0.1)
                            {
                                <div>
                                      Đơn Tối Thiểu ₫50k Giảm tối đa ₫20k
                                </div>
                            }
                            @if (Convert.ToDouble(item.price) == 0.2)
                            {
                                <div>
                                    Đơn Tối Thiểu ₫70k Giảm tối đa ₫20k
                                </div>
                            }
                            @if (Convert.ToDouble(item.price) == 0.3)
                            {
                                <div>
                                    Đơn Tối Thiểu ₫100k Giảm tối đa ₫20k
                                </div>
                            }
                            @if (Convert.ToDouble(item.price) == 0.4)
                            {
                                <div>
                                    Đơn Tối Thiểu ₫110k Giảm tối đa ₫40k
                                </div>
                            }
                            @if (Convert.ToDouble(item.price) > 1)
                            {
                                <div>
                                    Giảm @item.price 
                                </div>
                            }
                    </div>
                    <div class="timevc">
                        <div class="row">
                            <div class="col-8">
                                <i class='bx bx-stopwatch'></i>
                                <span>Có hiệu lực sau 1 ngày</span>
                            </div>
                            <div class="col-4" style=" display: flex;justify-content: right; font-size: 25px;">
                                <a href="#" style="color: rgb(32, 235, 235);text-decoration: none;margin-top: 15px; margin-right: -20px;">Điều Kiện</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
      }
    </div>
</div>