@model JZenoApp.Models.Partner

@{
    ViewData["Title"] = "Chỉnh Sửa Đối Tác";
    <link rel="stylesheet" href="~/css/managementForm.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
}

<div class="row" style="background: #fff; padding: 20px; margin: 10px; border-radius: 8px;">
    <h1 class="text-center">Cập Nhật Thông Tin</h1>
    <div class="col-md-15">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="partnerId" />
            <div class="form-group row p-0">
                <span class="col label-name">Tên Đối Tác</span>
                <input asp-for="name" class="input-form col-10" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class ="form-group row p-0">
                <span class="col label-name">Mô Tả</span>
                <input asp-for="description" class="input-form col-10" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class ="form-group row p-0">
                <span class="col label-name">Ngày Đăng</span>
                <input asp-for="dateCreated" class="input-form col-10" readonly />
                <span asp-validation-for="dateCreated" class="text-danger"></span>
            </div>
            <div class="form-group row p-0">
                <span class="col label-name">Hình Ảnh Hiện Tại</span>
                <span class="input-form col-10">
                    <img height="50" src="~/images/partner/@Model.image" />
                </span>
            </div>
            <div class="form-group row p-0">
                <span class="col label-name">Hình Ảnh</span>
                <span class ="input-form col-10">
                    <input asp-for="file" class="input-form col-10" />
                    <span asp-validation-for="file" class="text-danger"></span>
                    <input asp-for="image" hidden />
                </span>
            </div>
            <input asp-for="isActive" hidden />
            <div class="form-btn d-flex justify-content-center form-btn" style="margin: 8px 12px;">
                <input type="submit" value="Lưu Thay Đổi" class="btn btn-primary" style="
                    width: 100%;
                    background: #ee4d2d;
                    height: 38px;
                    border: none;
                    font-size: 18px;
                    border-radius: 24px;
                    font-weight: bold;" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về</a>
</div>
