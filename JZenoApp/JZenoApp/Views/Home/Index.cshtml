@model List<JZenoApp.Models.Product>

<head>
    <link href="~/css/Home.css" rel="stylesheet">

</head>

<style>
    swiper-container {
        width: 100%;
        height: 100%;
    }

    swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .swiper-slide img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .pt-5 {
        padding-top: 0.5rem !important;
    }

    .cat-item:hover {
        background: #FA5230;
    }

    .cat-item h4:hover {
        color: white;
    }

    .col-lg-4 {
        flex: 0 0 35% !important;
        max-width: 35% !important;
    }

    .col-lg-8 {
        flex: 0 0 65% !important;
        max-width: 65% !important;
    }

    .home-product-item__imgg:hover {
        transform: scale(1.1);
        transition: 0.5s ease-out;
    }

    .home-product-item__name{
        font-size: 14px;
    }

    .home-product-item__name{
        font-size: 14px;
    }
</style>

<div class="row">
        @foreach (var product in Model)
        {
            <div class="card col-sm-6 col-md-4 d-flex align-items-stretch" style="padding:30px; text-align:center;">
            <div class="card">
                @foreach(var img in product.productImages!)
                {
                    <img src="~/images/products/@img.URL" height="200" width="200" />
                }
                <h3 class="card-header">@product.name</h3>

                <div class="card-body">
                    <span class="text-muted">@(product.price) VND</span>
                    <a asp-route="addcart" asp-route-productid="@product.Id"
                   class="btn btn-secondary btn-sm float-right">Đặt hàng</a>
                </div>
            </div>
        </div>
        }
</div>


