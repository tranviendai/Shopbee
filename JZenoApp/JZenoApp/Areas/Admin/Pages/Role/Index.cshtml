@page "/admin/role/"
@model JZenoApp.Areas.Admin.Pages.Role.IndexModel
@{
    ViewData["Title"] = "List Role";
}
<script src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/1.13.3/js/dataTables.bootstrap5.min.js" type="text/javascript"></script>
<script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
<link href="https://cdn.datatables.net/1.13.3/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

<div class="bg-white" style="border-radius:5px; padding:10px;">
    <h1>Danh sách role</h1>
    <partial name="_StatusMessage" model="@Model.StatusMessage" />

    <form method="POST" class="my-1 d-inline">
        <button style="background-color:var(--main-color1); border:none;" class="btn btn-secondary" asp-page="./Add"
                asp-page-handler="StartNewRole">
            Tạo mới
        </button>
    </form>
    <p class="btn btn-success" style=" padding: 2px 12px 28px 12px; background-color:var(--main-color1); border:none;">
        <a style="" asp-page="./User">Danh sách người dùng</a>
    </p>

    <div class="box-section-content" style="margin-top:20px;padding-top:20px;">
        <table id="example" class="table table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>RoleID</th>
                    <th>Tên</th>
                    <th>
                        Chức năng
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.roles!)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>
                            <form method="POST" class="d-inline">
                                <button name="Input.ID" value="@role.Id" class="btn btn-success btn-sm"
                                        asp-page="./Add" asp-page-handler="StartUpdate">
                                    Chỉnh sửa
                                </button>
                            </form>
                            <form method="POST" class="d-inline">
                                <button name="Input.ID" value="@role.Id" class="btn btn-success btn-sm"
                                        asp-page="./Delete">
                                    Xóa
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>RoleID</th>
                    <th>Tên</th>
                    <th>
                        Chức năng
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>