@model IEnumerable<JZenoApp.Models.Partner>

@{
    ViewData["Title"] = "Danh sách đối tác";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    <link href="https://cdn.datatables.net/1.13.3/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.3/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
}


<table class="table table table-striped bg-white" style="width:100%;">
    <thead>
        <tr>
            <th>
                Tên Cửa Hàng
            </th>
            <th>
                Hình Ảnh
            </th>
            <th>
                Mô Tả
            </th>
            <th>
                Ngày Đăng
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateCreated)
            </td>
            <td>
                    @if (item.isActive == false)
                    {
                        <p>Chưa xác nhận</p>
                    }
                    else
                    {
                        <p>Đã xác nhận</p>
                    }
                </td>
            <td style="text-align: center;">
                <span class="btn btn-warning" style="min-width: 42px !important;">
                    <a asp-action="Edit" asp-route-id="@item.partnerId">
                    <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                </span>
                <span class="btn btn-primary" style="min-width: 42px !important;">
                   <a asp-action="Details" asp-route-id="@item.partnerId">
                   <i class="fa-solid fa-circle-info"></i>
                   </a> 
                </span>
            </td>
        </tr>
    }
    </tbody>
    <tfoot>
        <tr>
            <th>
                Tên Cửa Hàng
            </th>
            <th>
                Hình Ảnh
            </th>
            <th>
                Mô Tả
            </th>
            <th>
                Ngày Đăng
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </tfoot>
</table>
