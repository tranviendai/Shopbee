@model JZenoApp.Areas.Identity.Pages.Account.Manage.Bills.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bill[0].date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bill[0].price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bill[0].payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bill[0].deliveryForm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bill[0].Voucher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bill[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bill) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.payment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deliveryForm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voucher.voucherID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.billID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.billID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.billID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
