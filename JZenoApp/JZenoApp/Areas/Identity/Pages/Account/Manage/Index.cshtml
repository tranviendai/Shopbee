@page
@model JZenoApp.Areas.Identity.Pages.Account.Manage.IndexModel

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<link rel="stylesheet" href="/css/profile.css" />
<style>
    .form-floating input{
        padding-bottom:16px;
    }
</style>

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row hoso">
    <div class="col-md-12">
        <h2 style="font-weight:bold;font-size:3rem;">Hồ sơ của tôi</h2>
        <h5 style="color: #6F6F6F;">Quản lý thông tin hồ sơ để bảo mật tài khoản</h5>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <div class="col-8">
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <span class="ttlienhe">Ngày đăng ký</span>
                            <div class="col-md-10">
                                <div class="form-floating mb-3">
                                    <input style="padding-bottom:16px;" asp-for="Input.DateCreated" class="form-control" disabled />
                                    <span asp-validation-for="Input.DateCreated" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-sm-6">
                            <span class="ttlienhe">Email</span>
                            <div class="col-md-10">
                                 <div class="form-floating mb-3">
                                    <input style="padding-bottom:16px;" asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-sm-6">
                            <span class="ttlienhe">Họ và tên</span>
                            <div class="col-md-10">
                                <div class="form-floating mb-3">
                                    <input style="padding-bottom:16px;" asp-for="Input.FullName" class="form-control" placeholder="Please enter your full name" />
                                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-sm-6">
                            <span class="ttlienhe">Họ và tên</span>
                            <div class="col-md-10">
                                <div class="form-floating mb-3">
                                    <input style="padding-bottom:16px;" asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    
                    <div class="form-group col-sm-11">
                        <span class="ttlienhe">Địa chỉ</span>
                        <div class="col-md-12">
                            <div class="form-floating mb-3">
                                <input style="padding-bottom:16px;" asp-for="Input.Address" class="form-control" placeholder="Please enter your address" />
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                   
                </div>
                <div class="col-4" style="text-align:center;margin:auto;">
                    <div>
                        <img src="/images/users/@Model.Input.Image" height="100" />
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12" style="display:flex;justify-content:center;">
                    <button id="update-profile-button" type="submit" class="save btn btn-primary" style="background-color:var(--main-color1); color:white;padding: 8px 18px; border-radius:8px;">Lưu</button>
                </div>
            </div>
           
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
   
    .ttlienhe{
        font-size:18px;
    }
    .save:hover {
        background-color: #f26053;
      
    }
</style>
