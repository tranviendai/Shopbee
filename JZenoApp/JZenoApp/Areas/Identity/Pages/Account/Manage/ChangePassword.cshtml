@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<link rel="stylesheet" href="~/css/profile.css" />


<partial name="_StatusMessage" for="StatusMessage" />
<div class="row dbong">
    <div class="col-md-6">
        <h2 style="font-weight:bold;font-size:3rem;">Quản lý password</h2>
        <h5 style="color: #6F6F6F;">Quản lý mật khẩu để bảo mật tài khoản</h5>
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group ">
                <span class="ttlienhe">Mật khẩu hiện tại</span>
                <div class="form-floating mb-3">
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
                    <label asp-for="Input.OldPassword" class="form-label"></label>
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group ">
                <span class="ttlienhe">Password mới</span>
                <div class="form-floating mb-3">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
                    <label asp-for="Input.NewPassword" class="form-label"></label>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group ">
                <span class="ttlienhe">Nhập lại password</span>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12" style="display:flex;justify-content:center;">
                    <button type="submit" class="w-100 btn btn-lg btn-primary" style="background-color:var(--main-color1); color:white;padding: 8px 18px; border-radius:8px;">Update password</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-6">
        <img class="imagemail" src="~/images/categories/password (1).png" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    .form-label{
        font-size: 12px;
        color: gray;
    }
    .dbong{
        background-color: white;
        padding: 20px;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
        border-radius: 8px
    }
</style>
