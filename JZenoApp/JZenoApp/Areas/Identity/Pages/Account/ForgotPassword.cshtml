@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<link rel="stylesheet" href="~/css/StyleSheetFPassword.css" />
<!--<h1>@ViewData["Title"]</h1>-->
<div id="wrapper4">
    <form class="Resend-password" method="post">
        <h3>Đặt lại mật khẩu</h3>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Vui lòng nhập email của bạn</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary" style="height:40px;margin: 0px;color: #fff; background-color: #ee4d2d;box-shadow: 0 1px 1px rgba(0,0,0,.09)">Đặt lại mật khẩu</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
