@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}
<link rel="stylesheet" href="~/css/StyleSheetRegister.css" />
<!--<h1>@ViewData["Title"]</h1>-->
<div id="wrapper2">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h3 style ="padding-bottom: 15px"> Đăng ký</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password">Mật khẩu</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="Input.FullName" class="form-control" autocomplete="fullname" aria-required="true" placeholder="fullname" />
            <label asp-for="Input.FullName">Họ và tên</label>
            <span asp-validation-for="Input.FullName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="phonenumber" aria-required="true" placeholder="phonenumber" />
            <label asp-for="Input.PhoneNumber">Số điện thoại</label>
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input asp-for="Input.Address" class="form-control" autocomplete="address" aria-required="true" placeholder="address" />
            <label asp-for="Input.Address">Địa chỉ</label>
            <span asp-validation-for="Input.Address" class="text-danger"></span>
        </div>
        <button id="registerSubmit" type="submit" class="w-100 mb-3 btn btn-lg btn-primary" style="margin: 0px;margin-top:11px">ĐĂNG KÝ</button>
        <section>
            <h3 style="color: #dadce0; padding: 0 16px;text-transform: uppercase;font-size:12px; padding: 12px 0 12px 0">
                HOẶC
            </h3>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button id="google-submit" type="submit" class="w-100 mb-3 btn btn-lg btn-primary" style="justify-content:center; align-content:center;display: flex; margin:0px;" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><img class="icon-google" src="/images/logo/icon-google.png" />@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
